/**index.wxss**/
.container{
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  -webkit-box-orient: vertical;
}
.section_content{
  flex: 1;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.product_item{
  width:100%;
  height: 130rpx;
  border-top:2rpx solid #ccc;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product_item_left{
  width:130rpx;
  height: 100%;
  display:flex;
  justify-content: center;
  align-items: center;
}
.product_item_left image{
  width:90%;
  height: 90%;
  display: block;
  border-radius: 50%;  
  /* 转块级元素 */
}
.product_item_right{
  flex-grow: 1;
  height: 100%;
  display: flex;
  background: #fff;
  box-sizing: border-box;
}
.product_item_right_section{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  box-sizing: border-box;
  justify-content: center;
}
.right_listItem_title{
  font-size: 32rpx;
  font-weight: bold;
  color:#000;
}
.right_listItem_content{
  font-size: 28rpx;
  white-space:pre-wrap;
  margin-top: 10rpx;
}
.product_item_right_slider{
  width:50px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color:#000;
}
/* 尾部样式 */
.foot{
  width:100%;
  height: 120rpx;
  color:#000;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  border:2rpx solid #ccc;
}